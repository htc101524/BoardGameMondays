@page "/resend-confirmation"

@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager Navigation

<h1>Resend confirmation email</h1>

@if (_sent)
{
    <div class="alert alert-success" role="alert">
        If an account exists for that email and hasn't been confirmed yet, we've sent a new confirmation link.
    </div>
    <a class="btn btn-link" href="/login">Back to login</a>
}
else
{
    <p class="text-muted">Enter your email address and we'll send you a new confirmation link.</p>

    <form method="post" action="/account/resend-confirmation" data-enhance="false">
        <AntiforgeryToken />
        <div class="mb-3">
            <label class="form-label" for="resend-email">Email</label>
            <input id="resend-email" name="Email" class="form-control" autocomplete="email" value="@_email" />
        </div>

        <button type="submit" class="btn btn-primary">Send confirmation link</button>
        <a class="btn btn-link" href="/login">Back to login</a>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="text-danger mt-3">@_error</div>
        }
    </form>
}

@code {
    private string? _error;
    private string? _email;
    private bool _sent;

    protected override void OnParametersSet()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);
        _error = query.TryGetValue("error", out var error) ? error.ToString() : null;
        _email = query.TryGetValue("email", out var email) ? email.ToString() : null;
        _sent = query.TryGetValue("sent", out var sent) && sent.ToString() == "1";
    }
}
