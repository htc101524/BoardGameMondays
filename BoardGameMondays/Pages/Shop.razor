@page "/shop"
@using BoardGameMondays.Core
@using BoardGameMondays.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@inject ShopService ShopService
@inject BgmCoinService CoinService
@inject AuthenticationStateProvider AuthStateProvider
@inject IDbContextFactory<ApplicationDbContext> DbFactory

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-4">
        <div>
            <h1>Shop</h1>
            <p class="text-muted">Purchase emoji packs to react to game results</p>
        </div>
        <div>
            <div class="text-end">
                <div class="fw-semibold">Balance</div>
                <div class="fs-5">ðŸ’° @(_coins?.ToString() ?? "â€¦")</div>
            </div>
        </div>
    </div>

    <AuthorizeView>
        <NotAuthorized>
            <div class="alert alert-info">
                <a href="/login" class="alert-link">Log in</a> to purchase emoji packs.
            </div>
        </NotAuthorized>
        <Authorized>
            @if (_items is null)
            {
                <div class="text-muted">Loadingâ€¦</div>
            }
            else if (_items.Count == 0)
            {
                <div class="alert alert-info">No items available at this time.</div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var item in _items)
                    {
                        var owned = _ownedItemIds.Contains(item.Id);
                        var affordable = _coins.HasValue && _coins.Value >= item.Price;
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card h-100 @(owned ? "border-success" : "")">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text text-muted small">@item.Description</p>

                                    @if (item.ItemType == "EmojiPack" && item.Emojis.Count > 0)
                                    {
                                        <div class="mb-3 text-center">
                                            <div style="font-size: 3rem; line-height: 1;">
                                                @item.Emojis[0]
                                            </div>
                                        </div>
                                    }
                                    else if (item.ItemType == "BadgeRing")
                                    {
                                        var ringClass = $"bgm-badgeRing bgm-badgeRing--{item.Data}";
                                        <div class="mb-3 text-center">
                                            <div class="@ringClass" style="width: 80px; height: 80px; margin: 0 auto;">
                                                <div style="width: 100%; height: 100%; border-radius: 12px; background: rgba(191, 161, 74, 0.18); border: 1px solid rgba(75, 58, 26, 0.14); display: grid; place-items: center; font-weight: 800; font-size: 2rem; color: #22311c;">ðŸ‘¤</div>
                                            </div>
                                        </div>
                                    }

                                    @if (item.MinWinsRequired > 0)
                                    {
                                        var hasEnoughWins = _userWins >= item.MinWinsRequired;
                                        var winsClass = hasEnoughWins ? "text-success" : "text-danger";
                                        <div class="mb-2 small">
                                            <div class="@winsClass fw-semibold">Requires @item.MinWinsRequired win@(item.MinWinsRequired == 1 ? "" : "s")</div>
                                            <div class="text-muted">You have @_userWins win@(_userWins == 1 ? "" : "s")</div>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="fw-semibold">@item.Price ðŸ’°</div>
                                        @if (owned)
                                        {
                                            <span class="badge bg-success">Owned</span>
                                        }
                                        else
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-primary"
                                                    disabled="@(_saving || !affordable)"
                                                    title="@(!affordable ? "Not enough coins" : "")"
                                                    @onclick="() => PurchaseAsync(item.Id)">
                                                Buy
                                            </button>
                                        }
                                    </div>

                                    @if (!owned && !affordable && _coins.HasValue)
                                    {
                                        <div class="text-danger small mt-2">Need @(item.Price - _coins.Value) more coins</div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </Authorized>
    </AuthorizeView>
</div>

@code {
    private IReadOnlyList<ShopService.ShopItem>? _items;
    private HashSet<Guid> _ownedItemIds = new();
    private int? _coins;
    private string? _userId;
    private bool _saving;
    private int _userWins;

    protected override async Task OnInitializedAsync()
    {
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        _userId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        _items = await ShopService.GetAvailableItemsAsync();

        if (_userId is not null)
        {
            var purchased = await ShopService.GetUserPurchasedItemsAsync(_userId);
            _ownedItemIds = purchased.Select(p => p.Id).ToHashSet();

            var coinsResult = await CoinService.GetCoinsAsync(_userId);
            _coins = coinsResult;
            
            // Get user's win count
            await using var db = await DbFactory.CreateDbContextAsync();
            var memberIdClaim = await db.UserClaims
                .Where(c => c.UserId == _userId && c.ClaimType == "bgm:memberId")
                .Select(c => c.ClaimValue)
                .FirstOrDefaultAsync();
            
            if (memberIdClaim is not null && Guid.TryParse(memberIdClaim, out var memberId))
            {
                _userWins = await db.GameNightGames
                    .Where(g => g.WinnerMemberId == memberId && g.IsPlayed)
                    .CountAsync();
            }
        }
    }

    private async Task PurchaseAsync(Guid itemId)
    {
        if (_userId is null)
        {
            return;
        }

        _saving = true;
        try
        {
            var result = await ShopService.PurchaseItemAsync(_userId, itemId);
            if (result == BoardGameMondays.Core.PurchaseResult.Success)
            {
                _ownedItemIds.Add(itemId);
                var coinsResult = await CoinService.GetCoinsAsync(_userId);
                _coins = coinsResult;
            }
            else if (result == BoardGameMondays.Core.PurchaseResult.InsufficientWins)
            {
                // Show message that user needs more wins
            }
            else if (result == BoardGameMondays.Core.PurchaseResult.InsufficientCoins)
            {
                // Show message that user needs more coins
            }
            else
            {
                // Other purchase failure
            }
        }
        finally
        {
            _saving = false;
        }
    }
}
