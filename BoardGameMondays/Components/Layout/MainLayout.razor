@inherits LayoutComponentBase

@inject NavigationManager Navigation

@code {
    private bool IsHome
    {
        get
        {
            var relative = Navigation.ToBaseRelativePath(Navigation.Uri);
            if (string.IsNullOrWhiteSpace(relative))
            {
                return true;
            }

            var cut = relative.IndexOfAny(['?', '#']);
            if (cut >= 0)
            {
                relative = relative[..cut];
            }

            relative = relative.Trim('/');
            return string.IsNullOrEmpty(relative);
        }
    }
}


<div class="page @(IsHome ? "page--home" : "")">
    <NavMenu />
    <main>
        <article class="content px-4 @(IsHome ? "content--home" : "")">
            @Body
        </article>
    </main>
    <footer class="site-footer">
        <div class="site-footer__content">
            <span class="site-footer__copyright">© @DateTime.Now.Year Board Game Mondays</span>
            <nav class="site-footer__links">
                <a class="site-footer__donate" href="https://buymeacoffee.com/henrytcarter" target="_blank" rel="noopener noreferrer">Buy us a coffee</a>
                <a href="/privacy-policy">Privacy Policy</a>
                <a href="/terms-of-service">Terms of Service</a>
                <button type="button" class="site-footer__cookie-btn" onclick="cookieConsent.showBanner()">Cookie Settings</button>
            </nav>
        </div>
    </footer>
</div>

<BoardGameMondays.Components.Sections.CookieConsent />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
