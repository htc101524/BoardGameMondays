    private async Task SaveOddsAsync(int gameNightGameId, Guid memberId)
    {
        if (!_isAdmin || _selectedNight is null)
        {
            return;
        }

        var key = (gameNightGameId, memberId);

        if (!_oddsNumeratorByKey.TryGetValue(key, out var numerator) || numerator <= 0)
        {
            return;
        }

        if (!_oddsDenominatorByKey.TryGetValue(key, out var denominator) || denominator <= 0)
        {
            return;
        }

        var times100 = 100 + (int)Math.Round(100d * numerator / denominator);

        _saving = true;
        _status = null;
        try
        {
            _selectedNight = await GameNightService.SetOddsAsync(_selectedNight.Id, gameNightGameId, memberId, times100);
        }
        finally
        {
            _saving = false;
        }
    }

    private static int? ComputeProfit(int amount, int oddsTimes100)
    {
        var f = ToFraction(oddsTimes100);
        if (f is null)
        {
            return null;
        }

        return (amount * f.Value.Numerator) / f.Value.Denominator;
    }

