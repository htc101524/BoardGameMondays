@using BoardGameMondays.Core
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject BlogService BlogService
@inject AuthenticationStateProvider AuthStateProvider

@implements IDisposable

<section id="blog" class="home-section" aria-label="Blog">
    <div class="home-section__inner">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
            <h1 class="mb-0">Blog</h1>
            <div class="text-muted small">Articles about mechanics, design, and theory</div>
        </div>

        <div class="mt-3 d-grid gap-3" aria-label="Blog posts">
            @if (_loading)
            {
                <div class="text-muted">Loading…</div>
            }
            else if (_posts.Count == 0)
            {
                <div class="text-muted">No posts yet.</div>
            }
            else
            {
                @foreach (var post in _posts)
                {
                    var isExpanded = _expanded.Contains(post.Id);

                    <article class="card bgm-blogCard" aria-label="Blog post">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start gap-2 flex-wrap">
                                <div class="fw-semibold">@post.Title</div>
                                <div class="text-muted small">@post.CreatedOn.LocalDateTime.ToString("d MMMM yyyy")</div>
                            </div>

                            <div class="bgm-blogBody @(isExpanded ? "is-expanded" : "")">@post.Body</div>

                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary mt-2"
                                    @onclick="() => Toggle(post.Id)">
                                @(isExpanded ? "Hide" : "Read")
                            </button>
                        </div>
                    </article>
                }
            }
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="card mt-4" aria-label="Add blog post">
                    <div class="card-body">
                        <div class="fw-semibold mb-2">Add post</div>

                        <div class="d-grid gap-2" style="max-width: 860px">
                            <input class="form-control" placeholder="Title" @bind="_newTitle" />
                            <textarea class="form-control" rows="8" placeholder="Write your post…" @bind="_newBody"></textarea>

                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                <button type="button" class="btn btn-primary" disabled="@_saving" @onclick="AddAsync">Publish</button>
                                @if (!string.IsNullOrWhiteSpace(_status))
                                {
                                    <span class="text-muted">@_status</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</section>

@code {
    private readonly List<BlogService.BlogPost> _posts = new();
    private readonly HashSet<Guid> _expanded = new();

    private bool _loading;
    private bool _saving;
    private string? _status;

    private string _newTitle = string.Empty;
    private string _newBody = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        BlogService.Changed += OnChanged;
        await RefreshAsync();
    }

    private void OnChanged()
    {
        _ = InvokeAsync(RefreshAsync);
    }

    private async Task RefreshAsync()
    {
        _loading = true;
        try
        {
            _posts.Clear();
            _posts.AddRange(await BlogService.GetLatestAsync(take: 6));
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private void Toggle(Guid id)
    {
        if (!_expanded.Add(id))
        {
            _expanded.Remove(id);
        }
    }

    private async Task AddAsync()
    {
        _status = null;
        var title = _newTitle.Trim();
        var body = _newBody.Trim();

        if (string.IsNullOrWhiteSpace(title) || string.IsNullOrWhiteSpace(body))
        {
            _status = "Title and body are required.";
            return;
        }

        _saving = true;
        try
        {
            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = auth.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

            await BlogService.AddAsync(title, body, userId);
            _newTitle = string.Empty;
            _newBody = string.Empty;
            _status = "Published.";

            await RefreshAsync();
        }
        finally
        {
            _saving = false;
        }
    }

    public void Dispose()
    {
        BlogService.Changed -= OnChanged;
    }
}
