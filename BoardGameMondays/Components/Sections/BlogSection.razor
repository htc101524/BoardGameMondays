@using BoardGameMondays.Core
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using System.Security.Claims
@inject BlogService BlogService
@inject AuthenticationStateProvider AuthStateProvider
@inject IHttpContextAccessor HttpContextAccessor
@inject IAssetStorage AssetStorage
@inject IJSRuntime JS

@implements IDisposable

@if (!_isAdmin && !_loading && _posts.Count == 0)
{
    
}
else
{
    <section @ref="_blogSectionRef" id="blog" class="home-section" aria-label="Blog">
        <div class="home-section__inner">
            <div class="d-flex justify-content-between align-items-end flex-wrap gap-2">
                <div>
                    <h1 class="mb-0">Blog</h1>
                    <div class="text-muted small">Articles about mechanics, design, and theory</div>
                </div>

                <div class="d-flex gap-2 align-items-center">
                    @if (!_loading && _posts.Count > 0)
                    {
                        <div class="text-muted small">Page @(_pageIndex + 1) / @_posts.Count</div>
                    }
                    <a href="/blog" class="btn btn-sm btn-outline-secondary">View all posts</a>
                </div>
            </div>

            <div class="mt-3" aria-label="Blog posts">
                @if (_loading)
                {
                    <div class="text-muted">Loadingâ€¦</div>
                }
                else if (_posts.Count == 0)
                {
                    <div class="text-muted">No posts yet.</div>
                }
                else
                {
                    var post = _posts[_pageIndex];

                    <article class="bgm-newspaper" aria-label="Blog post">
                        <header class="bgm-newspaper__header">
                            <div class="bgm-newspaper__mast">Board Game Mondays</div>
                            <div class="bgm-newspaper__rule"></div>
                            <a href="/blog/@post.Slug" class="bgm-newspaper__title">@post.Title</a>
                            @if (_isAdmin && post.IsAdminOnly)
                            {
                                <div class="mt-2">
                                    <span class="badge text-bg-warning">Admin only</span>
                                </div>
                            }
                            <div class="bgm-newspaper__byline text-muted">@post.CreatedOn.LocalDateTime.ToString("d MMMM yyyy")</div>
                        </header>

                        <div class="bgm-newspaper__body bgm-markdown">
                            @MarkdownRenderer.ToMarkupString(post.Body)
                        </div>

                        <footer class="bgm-newspaper__footer">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        disabled="@(_pageIndex == 0)"
                                        @onclick="Prev">
                                    Previous page
                                </button>

                                <div class="d-flex align-items-center gap-2">
                                    @if (_isAdmin)
                                    {
                                        <a href="/admin/blog/@post.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => DeleteAsync(post.Id)">Delete</button>
                                    }
                                    <div class="text-muted small">@(_pageIndex + 1) / @_posts.Count</div>
                                </div>

                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        disabled="@(_pageIndex >= _posts.Count - 1)"
                                        @onclick="Next">
                                    Turn page
                                </button>
                            </div>
                        </footer>
                    </article>
                }
            </div>

            @if (_isAdmin)
            {
                <div class="card mt-4" aria-label="Add blog post">
                    <div class="card-body">
                        <div class="fw-semibold mb-2">Add post</div>
                        <div class="text-muted small mb-2">
                            Supports Markdown: **bold**, *italic*, [links](url), ![images](url), and more.
                        </div>

                        <div class="d-grid gap-2" style="max-width: 860px">
                            <input class="form-control" placeholder="Title" @bind="_newTitle" />
                            <textarea @ref="_textareaRef" class="form-control font-monospace" rows="12" placeholder="Write your post in Markdownâ€¦" @bind="_newBody"></textarea>

                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                <label class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="_newIsAdminOnly" />
                                    <span class="form-check-label">Admin only</span>
                                </label>
                                <button type="button" class="btn btn-primary" disabled="@_saving" @onclick="AddAsync">Publish</button>
                                <label class="btn btn-outline-secondary mb-0">
                                    <InputFile OnChange="UploadImageAsync" accept="image/*" style="display:none" />
                                    ðŸ“· Upload image
                                </label>
                                @if (!string.IsNullOrWhiteSpace(_status))
                                {
                                    <span class="text-muted">@_status</span>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(_newBody))
                            {
                                <div class="mt-3">
                                    <div class="fw-semibold mb-1">Preview</div>
                                    <div class="border rounded p-3 bgm-markdown">
                                        @MarkdownRenderer.ToMarkupString(_newBody)
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}

@code {
    private readonly List<BlogService.BlogPost> _posts = new();

    private bool _loading = true;
    private bool _saving;
    private string? _status;

    private bool _isAdmin;
    private int _pageIndex;

    private string _newTitle = string.Empty;
    private string _newBody = string.Empty;
    private bool _newIsAdminOnly;
    private ElementReference _blogSectionRef;
    private ElementReference _textareaRef;

    protected override async Task OnInitializedAsync()
    {
        BlogService.Changed += OnChanged;
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var viewAsNonAdmin = string.Equals(
            HttpContextAccessor.HttpContext?.Request.Cookies["bgm_viewAsNonAdmin"],
            "1",
            StringComparison.Ordinal);
        _isAdmin = auth.User.Identity?.IsAuthenticated == true && auth.User.IsInRole("Admin") && !viewAsNonAdmin;
        await RefreshAsync();
    }

    private void OnChanged()
    {
        _ = InvokeAsync(RefreshAsync);
    }

    private async Task RefreshAsync()
    {
        _loading = true;
        try
        {
            _posts.Clear();
            _posts.AddRange(await BlogService.GetLatestAsync(take: 12, includeAdminOnly: _isAdmin));
            _pageIndex = 0;
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task Next()
    {
        if (_pageIndex < _posts.Count - 1)
        {
            _pageIndex++;
            await ScrollToTopAsync();
        }
    }

    private async Task Prev()
    {
        if (_pageIndex > 0)
        {
            _pageIndex--;
            await ScrollToTopAsync();
        }
    }

    private async Task ScrollToTopAsync()
    {
        try
        {
            await JS.InvokeVoidAsync("eval", $"document.getElementById('blog').scrollIntoView({{ behavior: 'smooth', block: 'start' }})");
        }
        catch
        {
            // Ignore JS interop errors (e.g., during prerendering)
        }
    }

    private async Task DeleteAsync(Guid postId)
    {
        try
        {
            var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this post?");
            if (!confirmed) return;

            await BlogService.DeleteAsync(postId);
            _status = "Post deleted.";
            await RefreshAsync();
        }
        catch
        {
            _status = "Failed to delete post.";
        }
    }

    private async Task UploadImageAsync(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file is null) return;

        var maxSize = 5 * 1024 * 1024; // 5 MB
        if (file.Size > maxSize)
        {
            _status = "Image too large (max 5 MB).";
            return;
        }

        _status = "Uploadingâ€¦";
        StateHasChanged();

        try
        {
            await using var stream = file.OpenReadStream(maxAllowedSize: maxSize);
            var extension = Path.GetExtension(file.Name).TrimStart('.');
            if (string.IsNullOrWhiteSpace(extension)) extension = "png";

            var url = await AssetStorage.SaveBlogImageAsync(stream, extension);
            
            // Insert markdown image at cursor or end
            var imageMarkdown = $"![{file.Name}]({url})";
            _newBody = string.IsNullOrWhiteSpace(_newBody) 
                ? imageMarkdown 
                : _newBody + "\n\n" + imageMarkdown;

            _status = "Image uploaded.";
        }
        catch
        {
            _status = "Failed to upload image.";
        }
    }

    private async Task AddAsync()
    {
        _status = null;
        var title = _newTitle.Trim();
        var body = _newBody.Trim();

        if (string.IsNullOrWhiteSpace(title) || string.IsNullOrWhiteSpace(body))
        {
            _status = "Title and body are required.";
            return;
        }

        _saving = true;
        try
        {
            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = auth.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

            await BlogService.AddAsync(title, body, _newIsAdminOnly, userId);
            _newTitle = string.Empty;
            _newBody = string.Empty;
            _newIsAdminOnly = false;
            _status = "Published.";

            await RefreshAsync();
        }
        finally
        {
            _saving = false;
        }
    }

    public void Dispose()
    {
        BlogService.Changed -= OnChanged;
    }
}
