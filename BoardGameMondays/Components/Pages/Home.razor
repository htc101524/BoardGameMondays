@page "/"

@implements IDisposable
@implements IAsyncDisposable

@using BoardGameMondays.Core
@using BoardGameMondays.Components.Sections
@using BoardGameMondays.Components.Sections.Highlights
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@using System.Security.Claims
@inject BoardGameService BoardGameService
@inject AgreementService AgreementService
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject IWebHostEnvironment Env
@inject BgmCoinService CoinService
@inject BlogService BlogService
@inject GameNightService GameNightService

<PageTitle>Board Game Mondays</PageTitle>


<section id="latest" class="home-hero" aria-label="Homepage highlights">
    <div class="home-hero__grid home-hero__grid--split" aria-label="Highlights">
        @* Left side: Large Last Monday Recap *@
        <div class="home-hero__main">
            <button type="button"
                    class="home-hero__card home-hero__cardButton home-hero__card--recap home-hero__card--large"
                    aria-label="Jump to Mondays"
                    @onclick="GoToMondaysAsync">
                <div class="home-hero__cardInner">
                    <LastMondayRecapCard />
                </div>
            </button>
        </div>

        @* Right side: Stacked highlight cards *@
        <div class="home-hero__sidebar">
            @foreach (var highlight in _highlights)
            {
                <HighlightCard Highlight="highlight" OnClick="HandleHighlightClickAsync" />
            }
        </div>
    </div>
</section>

<MondaysSection @ref="_mondaysSection" />

<section id="thoughts" class="home-section" aria-label="What we thought">
    <div class="home-section__inner">
        @{
            var thoughtsGame = _thoughtsGame ?? _latestReviewed;
            var avgScore = thoughtsGame?.Reviews?.Any() == true
                ? thoughtsGame.Reviews.Average(r => r.Rating)
                : (double?)null;

            var heroArtUrl = thoughtsGame?.ImageUrl;
            var hasHeroArt = !string.IsNullOrWhiteSpace(heroArtUrl);
            var hasRating = avgScore is not null;
            var heroClass = hasHeroArt ? "bgm-thoughtsHero has-art" : "bgm-thoughtsHero";
            if (hasRating)
            {
                heroClass += " has-rating";
            }
            var safeHeroArtUrl = hasHeroArt ? heroArtUrl!.Replace("'", "\\'") : null;
            var heroStyle = hasHeroArt ? $"--bgm-game-art: url('{safeHeroArtUrl}');" : null;

            var avgClass = string.Empty;
            var avgStyle = string.Empty;
            var avgTier = string.Empty;
            if (avgScore is { } avg)
            {
                if (avg >= 9.5)
                {
                    avgClass = "bgm-scoreBadge--platinum";
                    avgTier = "platinum";
                }
                else if (avg >= 8.5)
                {
                    avgClass = "bgm-scoreBadge--gold";
                    avgTier = "gold";
                }
                else if (avg >= 7.5)
                {
                    avgClass = "bgm-scoreBadge--silver";
                    avgTier = "silver";
                }
                else if (avg >= 6.5)
                {
                    avgClass = "bgm-scoreBadge--bronze";
                    avgTier = "bronze";
                }
                else if (avg >= 5.5)
                {
                    avgClass = "bgm-scoreBadge--iron";
                    avgTier = "iron";
                }
                else if (avg >= 4.0)
                {
                    avgClass = "bgm-scoreBadge--red";
                    avgTier = "red";
                }
                else
                {
                    avgClass = "bgm-scoreBadge--black";
                    avgTier = "black";
                }
            }
        }

        <div class="bgm-thoughtsHeader">
            <div class="@heroClass" style="@heroStyle" aria-label="Game overview">
                <div class="bgm-thoughtsHero__main">
                    <div class="bgm-thoughtsHero__kicker">What we thought of</div>
                    <h1 class="bgm-thoughtsHero__title">@thoughtsGame?.Name</h1>

                    @if (hasHeroArt)
                    {
                        <div class="bgm-thoughtsHero__art" aria-hidden="true">
                            <img src="@heroArtUrl" alt="" />
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(thoughtsGame?.Tagline))
                    {
                        <div class="bgm-thoughtsHero__tagline text-muted">@thoughtsGame.Tagline</div>
                    }
                </div>

                @if (avgScore is not null)
                {
                    <div class="bgm-thoughtsHero__rating" aria-label="Scores">
                        <div class="bgm-scoreSummary__label">BGM RATING:</div>
                        <div class="bgm-scoreBadges" aria-label="Average score">
                            <svg class="bgm-scoreBadge bgm-scoreBadge--svg @avgClass" viewBox="0 0 120 104" aria-label="BGM rating" role="img" xmlns="http://www.w3.org/2000/svg">
                                <defs>
                                    <linearGradient id="g_platinum" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#eef6ff" />
                                        <stop offset="50%" stop-color="#6fa6f5" />
                                        <stop offset="100%" stop-color="#dcecff" />
                                    </linearGradient>
                                    <linearGradient id="g_gold" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#fff4c7" />
                                        <stop offset="50%" stop-color="#f5d77a" />
                                        <stop offset="100%" stop-color="#e5b84a" />
                                    </linearGradient>
                                    <linearGradient id="g_silver" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#f5f7fb" />
                                        <stop offset="50%" stop-color="#ced5de" />
                                        <stop offset="100%" stop-color="#9aa4b2" />
                                    </linearGradient>
                                    <linearGradient id="g_bronze" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#f3d2b8" />
                                        <stop offset="50%" stop-color="#c9875b" />
                                        <stop offset="100%" stop-color="#a0623f" />
                                    </linearGradient>
                                    <linearGradient id="g_iron" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#ffd3ad" />
                                        <stop offset="50%" stop-color="#f1a66a" />
                                        <stop offset="100%" stop-color="#d1783b" />
                                    </linearGradient>
                                    <linearGradient id="g_red" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#ff9c9c" />
                                        <stop offset="60%" stop-color="#e35151" />
                                        <stop offset="100%" stop-color="#b51f1f" />
                                    </linearGradient>
                                    <linearGradient id="g_black" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#3a3a3a" />
                                        <stop offset="100%" stop-color="#050505" />
                                    </linearGradient>
                                </defs>
                                @{
                                    var grad = string.IsNullOrEmpty(avgTier) ? "g_gold" : "g_" + avgTier;
                                }
                                <polygon points="60,4 102,26 102,78 60,100 18,78 18,26" class="bgm-scorePoly" fill="url(#@grad)" />
                                <text x="50%" y="54%" dominant-baseline="middle" text-anchor="middle" class="bgm-scoreText">@FormatScore(avgScore.Value)</text>
                            </svg>
                        </div>

                        @if (Env.IsDevelopment())
                        {
                            <div class="bgm-paletteDebug" aria-label="Palette debug">
                                <span class="bgm-paletteSwatch bgm-paletteSwatch--c1" title="c1"></span>
                                <span class="bgm-paletteSwatch bgm-paletteSwatch--c2" title="c2"></span>
                                <span class="bgm-paletteSwatch bgm-paletteSwatch--c3" title="c3"></span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="bgm-thoughtsBody">
            <div class="bgm-thoughtsMain">
                @if (thoughtsGame is not null && (
                    thoughtsGame.MinPlayers is not null ||
                    thoughtsGame.MaxPlayers is not null ||
                    thoughtsGame.RuntimeMinutes is not null ||
                    thoughtsGame.FirstPlayRuntimeMinutes is not null ||
                    thoughtsGame.Complexity is not null ||
                    thoughtsGame.BoardGameGeekScore is not null ||
                    !string.IsNullOrWhiteSpace(thoughtsGame.BoardGameGeekUrl) ||
                    (thoughtsGame.AreScoresCountable && thoughtsGame.HighScore is not null)))
                {
                    <div class="card bgm-gameStatsCard" aria-label="Game stats">
                        <div class="card-body">
                            <div class="fw-semibold mb-2">Game stats</div>

                            <div class="row g-2">
                                @if (thoughtsGame.MinPlayers is not null || thoughtsGame.MaxPlayers is not null)
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">Players</div>
                                        <div class="fw-semibold">
                                            @if (thoughtsGame.MinPlayers is { } minP && thoughtsGame.MaxPlayers is { } maxP)
                                            {
                                                <span>@minP–@maxP</span>
                                            }
                                            else if (thoughtsGame.MaxPlayers is { } onlyMax)
                                            {
                                                <span>Up to @onlyMax</span>
                                            }
                                            else
                                            {
                                                <span>@thoughtsGame.MinPlayers</span>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (thoughtsGame.RuntimeMinutes is not null)
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">Runtime</div>
                                        <div class="fw-semibold">@thoughtsGame.RuntimeMinutes min</div>
                                    </div>
                                }

                                @if (thoughtsGame.FirstPlayRuntimeMinutes is not null)
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">First play runtime</div>
                                        <div class="fw-semibold">@thoughtsGame.FirstPlayRuntimeMinutes min</div>
                                    </div>
                                }

                                @if (thoughtsGame.Complexity is not null)
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">Complexity</div>
                                        <div class="fw-semibold">@thoughtsGame.Complexity.Value.ToString("0.0")</div>
                                    </div>
                                }

                                @if (thoughtsGame.BoardGameGeekScore is not null)
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">BoardGameGeek score</div>
                                        <div class="fw-semibold">@thoughtsGame.BoardGameGeekScore.Value.ToString("0.0")</div>
                                    </div>
                                }

                                @if (!string.IsNullOrWhiteSpace(thoughtsGame.BoardGameGeekUrl))
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">BoardGameGeek</div>
                                        <a class="fw-semibold" href="@thoughtsGame.BoardGameGeekUrl" target="_blank" rel="noopener noreferrer">Open page</a>
                                    </div>
                                }

                                @if (thoughtsGame.AreScoresCountable && thoughtsGame.HighScore is not null)
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">High score</div>
                                        <div class="fw-semibold">@thoughtsGame.HighScore</div>
                                    </div>
                                }

                                @if (thoughtsGame.AreScoresCountable && !string.IsNullOrWhiteSpace(thoughtsGame.HighScoreMemberName))
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">Set by</div>
                                        <div class="fw-semibold">@thoughtsGame.HighScoreMemberName</div>
                                    </div>
                                }

                                @if (thoughtsGame.AreScoresCountable && thoughtsGame.HighScoreAchievedOn is not null)
                                {
                                    <div class="col-12 col-sm-6">
                                        <div class="text-muted small">High score achieved</div>
                                        <div class="fw-semibold">@thoughtsGame.HighScoreAchievedOn.Value.ToString("MMM d, yyyy")</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <div class="bgm-thoughtsContent">
                    @if (_selectedReview is not null)
                    {
                        <div class="bgm-thoughtsSelected" aria-label="Selected reviewer">
                            <div class="bgm-thoughtsSelected__row" aria-label="Selected reviewer score and avatar">
                                <div aria-label="Selected reviewer score">
                                    <div class="bgm-scoreBadge bgm-scoreBadge--secondary" aria-label="Reviewer score">
                                        <div class="bgm-scoreBadge__value">@FormatScore(_selectedReview.Rating)</div>
                                    </div>
                                </div>

                                <div class="bgm-thoughtsSelected__avatar" aria-hidden="true">
                                    @if (!string.IsNullOrWhiteSpace(_selectedReview.Reviewer.AvatarUrl))
                                    {
                                        <img src="@_selectedReview.Reviewer.AvatarUrl" alt="" />
                                    }
                                    else
                                    {
                                        @(string.IsNullOrWhiteSpace(_selectedReview.Reviewer.Name) ? "?" : _selectedReview.Reviewer.Name[..1].ToUpperInvariant())
                                    }
                                </div>
                            </div>

                            <div class="bgm-thoughtsSelected__meta text-muted small" aria-label="Times played">
                                Played @_selectedReview.TimesPlayed @(_selectedReview.TimesPlayed == 1 ? "time" : "times")
                            </div>
                        </div>
                        
                        <div class="bgm-reviewText">
                            <p>@_selectedReview.Description</p>

                            <AuthorizeView>
                                <Authorized>
                                    <div class="mt-3" aria-label="Agreement">
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <span class="fw-semibold">How much do you agree with @_selectedReview.Reviewer.Name?</span>

                                            @if (!_canAgreeWithSelectedReview)
                                            {
                                                <span class="text-muted">You can't rate agreement with yourself.</span>
                                            }
                                            else
                                            {
                                                <div class="btn-group" role="group" aria-label="Rate agreement">
                                                    @for (var score = 1; score <= 5; score++)
                                                    {
                                                        var s = score;
                                                        var isActive = _myAgreement == s;
                                                        <button type="button"
                                                                class="btn btn-sm @(isActive ? "btn-success" : "btn-outline-secondary")"
                                                                disabled="@_savingAgreement"
                                                                @onclick="() => SetAgreementAsync(s)">@s</button>
                                                    }
                                                </div>
                                            }

                                            @if (!string.IsNullOrWhiteSpace(_agreementStatus))
                                            {
                                                <span class="text-muted">@_agreementStatus</span>
                                            }
                                        </div>
                                    </div>
                                </Authorized>
                            </AuthorizeView>
                        </div>
                    }
                    else if (thoughtsGame is not null && !string.IsNullOrWhiteSpace(thoughtsGame.Tagline))
                    {
                        <p>@thoughtsGame.Tagline</p>
                    }
                    else
                    {
                        <p>No thoughts yet.</p>
                    }
                </div>

                @if (thoughtsGame?.Reviews?.Any() == true)
                {
                    <div class="bgm-review-switcher" role="group" aria-label="Select a reviewer">
                        @foreach (var review in thoughtsGame.Reviews
                            .GroupBy(r => r.Reviewer.Name, StringComparer.OrdinalIgnoreCase)
                            .Select(g => g.OrderByDescending(r => r.CreatedOn).First())
                            .OrderBy(r => r.Reviewer.Name, StringComparer.OrdinalIgnoreCase))
                        {
                            var isSelected = string.Equals(review.Reviewer.Name, _selectedReview?.Reviewer.Name, StringComparison.OrdinalIgnoreCase);

                            <button type="button"
                                    class="bgm-review-switcher__button @(isSelected ? "is-active" : "")"
                                    aria-pressed="@isSelected"
                                    @onclick="() => SelectReviewAsync(review)">
                                <span class="bgm-review-switcher__avatar" aria-hidden="true">
                                    @if (!string.IsNullOrWhiteSpace(review.Reviewer.AvatarUrl))
                                    {
                                        <img src="@review.Reviewer.AvatarUrl" alt="" />
                                    }
                                    else
                                    {
                                        @(string.IsNullOrWhiteSpace(review.Reviewer.Name) ? "?" : review.Reviewer.Name[..1].ToUpperInvariant())
                                    }
                                </span>
                                <span class="bgm-review-switcher__name">@review.Reviewer.Name</span>
                            </button>
                        }
                    </div>
                }
            </div>

            <AuthorizeView>
                <Authorized>
                    <aside class="bgm-thoughtsSide" aria-label="Alignment leaderboard">
                        <div class="card bgm-alignCard">
                            <div class="card-body">
                                <div class="fw-semibold mb-2">You align with</div>

                                @if (_alignment.Count == 0)
                                {
                                    <div class="text-muted">Rate a few reviews to see this.</div>
                                }
                                else
                                {
                                    <div class="list-group list-group-flush">
                                        @foreach (var item in _alignment)
                                        {
                                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                <div class="text-truncate">@item.ReviewerName</div>
                                                <div class="text-muted text-nowrap">@item.AverageScore.ToString("0.0")</div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </aside>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</section>

<GamesSection OnGameSelected="HandleGameSelectedAsync" />
<PeopleSection />


@code {
    private BoardGame? _latestReviewed;
    private BoardGame? _thoughtsGame;
    private Review? _selectedReview;

    private string? _paletteImageUrl;

    private IJSObjectReference? _thoughtsScrollBinder;
    private bool _homeNavAutoHideEnabled;

    private int? _myAgreement;
    private bool _savingAgreement;
    private string? _agreementStatus;
    private List<AgreementService.ReviewerAlignment> _alignment = new();
    private bool _canAgreeWithSelectedReview = true;
    private string? _userId;

    // Extensible highlight system - easy to add/remove highlights
    private List<IHomeHighlight> _highlights = new();

    private MondaysSection? _mondaysSection;

    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        BoardGameService.Changed += OnBoardGameServiceChanged;
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        _userId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        await RefreshFeaturedAsync(resetThoughts: true);
        await RefreshHighlightsAsync();
        await RefreshAgreementStateAsync();
    }

    /// <summary>
    /// Refreshes all homepage highlight cards. New highlights can be added here.
    /// </summary>
    private async Task RefreshHighlightsAsync()
    {
        var highlights = new List<IHomeHighlight>();

        // 1. Latest Review
        highlights.Add(new LatestReviewHighlight(_latestReviewed));

        // 2. Richest BGM Member
        var leaders = await CoinService.GetLeaderboardAsync(take: 1);
        var richest = leaders.FirstOrDefault();
        highlights.Add(new RichestMemberHighlight(
            richest?.DisplayName,
            richest?.Coins ?? 0,
            richest?.UserId));

        // 3. Latest Blog Post
        var posts = await BlogService.GetLatestAsync(take: 1);
        highlights.Add(new LatestBlogPostHighlight(posts.FirstOrDefault()));

        _highlights = highlights;
    }

    private async Task HandleHighlightClickAsync(IHomeHighlight highlight)
    {
        switch (highlight)
        {
            case LatestReviewHighlight reviewHighlight when reviewHighlight.Game is not null:
                await GoToLatestThoughtsAsync();
                break;

            case RichestMemberHighlight:
                Navigation.NavigateTo("/leaderboard");
                break;

            case LatestBlogPostHighlight:
                await JS.InvokeVoidAsync("bgm.scrollToIdNextFrame", "blog", "smooth");
                break;

            default:
                if (!string.IsNullOrEmpty(highlight.NavigationUrl))
                {
                    if (highlight.NavigationUrl.StartsWith("#"))
                    {
                        await JS.InvokeVoidAsync("bgm.scrollToIdNextFrame", highlight.NavigationUrl.TrimStart('#'), "smooth");
                    }
                    else
                    {
                        Navigation.NavigateTo(highlight.NavigationUrl);
                    }
                }
                break;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_homeNavAutoHideEnabled)
        {
            try
            {
                await JS.InvokeVoidAsync("bgm.enableHomeNavAutoHide", 40);
                _homeNavAutoHideEnabled = true;
            }
            catch
            {
            }
        }

        if (firstRender && _thoughtsScrollBinder is null)
        {
            try
            {
                _thoughtsScrollBinder = await JS.InvokeAsync<IJSObjectReference>("bgm.bindThoughtsScrollProgress", "thoughts");
            }
            catch
            {
            }
        }

        var url = _thoughtsGame?.ImageUrl;
        if (string.IsNullOrWhiteSpace(url))
        {
            if (!string.IsNullOrWhiteSpace(_paletteImageUrl))
            {
                _paletteImageUrl = null;
                try
                {
                    await JS.InvokeVoidAsync("bgm.clearPalette", "thoughts");
                }
                catch
                {
                }
            }

            return;
        }

        if (string.Equals(_paletteImageUrl, url, StringComparison.Ordinal))
        {
            return;
        }

        _paletteImageUrl = url;

        try
        {
            await JS.InvokeVoidAsync("bgm.applyPaletteFromImage", "thoughts", url);
        }
        catch
        {
        }
    }

    private async Task RefreshFeaturedAsync(bool resetThoughts)
    {
        var previousLatest = _latestReviewed;
        _latestReviewed = await BoardGameService.GetFeaturedOrLatestReviewedAsync();

        if (resetThoughts || _thoughtsGame is null || ReferenceEquals(_thoughtsGame, previousLatest))
        {
            _thoughtsGame = _latestReviewed;
            _selectedReview = PickDefaultReview(_thoughtsGame);
        }
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        var path = new Uri(e.Location).AbsolutePath;
        if (!string.Equals(path, "/", StringComparison.OrdinalIgnoreCase))
        {
            return;
        }

        _ = InvokeAsync(async () =>
        {
            await RefreshFeaturedAsync(resetThoughts: true);
            await RefreshHighlightsAsync();
            await RefreshAgreementStateAsync();
            StateHasChanged();
        });
    }

    private void OnBoardGameServiceChanged()
    {
        _ = InvokeAsync(async () =>
        {
            await RefreshFeaturedAsync(resetThoughts: false);
            await RefreshHighlightsAsync();
            await RefreshAgreementStateAsync();
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
        BoardGameService.Changed -= OnBoardGameServiceChanged;
    }

    public async ValueTask DisposeAsync()
    {
        if (_homeNavAutoHideEnabled)
        {
            _homeNavAutoHideEnabled = false;
        }

        if (_thoughtsScrollBinder is null)
        {
            return;
        }

        _thoughtsScrollBinder = null;
    }

    private async Task SelectReviewAsync(Review review)
    {
        _selectedReview = review;
        await RefreshAgreementStateAsync();
        StateHasChanged();
    }

    private static string FormatScore(double score)
        => score.ToString("0.0");

    private async Task HandleGameSelectedAsync(BoardGame game)
    {
        _thoughtsGame = game;
        _selectedReview = PickDefaultReview(game);

        await RefreshAgreementStateAsync();

        await JS.InvokeVoidAsync("bgm.scrollToIdNextFrame", "thoughts", "smooth");
    }

    private async Task GoToLatestThoughtsAsync()
    {
        if (_latestReviewed is null)
        {
            return;
        }

        _thoughtsGame = _latestReviewed;
        _selectedReview = PickDefaultReview(_latestReviewed);

        await RefreshAgreementStateAsync();

        await JS.InvokeVoidAsync("bgm.scrollToIdNextFrame", "thoughts", "smooth");
    }

    private async Task GoToMondaysAsync()
    {
        // Scroll to the section first
        try
        {
            await JS.InvokeVoidAsync("bgm.scrollToIdNextFrame", "mondays", "smooth");
        }
        catch (TaskCanceledException)
        {
            return;
        }
        catch (JSDisconnectedException)
        {
            return;
        }
        
        // Get the last past Monday from the GameNightService
        var today = DateOnly.FromDateTime(DateTime.Today);
        var mondayOnOrBeforeToday = GetMondayOnOrBefore(today);
        var nextMonday = today.DayOfWeek == DayOfWeek.Monday
            ? mondayOnOrBeforeToday
            : mondayOnOrBeforeToday.AddDays(7);
        
        var pastDates = await GameNightService.GetRecentPastGameNightDatesAsync(nextMonday, take: 1);
        var lastMonday = pastDates.FirstOrDefault();
        
        // If we have a last Monday and the MondaysSection is available, select it
        // Add a small delay to ensure the section is rendered
        if (lastMonday != default && _mondaysSection is not null)
        {
            await Task.Delay(50);
            await _mondaysSection.SelectMondayAsync(lastMonday);
        }
    }

    private static DateOnly GetMondayOnOrBefore(DateOnly date)
    {
        var delta = (7 + ((int)date.DayOfWeek - (int)DayOfWeek.Monday)) % 7;
        return date.AddDays(-delta);
    }

    private static Review? PickDefaultReview(BoardGame? game)
        => game?.Reviews?.OrderByDescending(r => r.CreatedOn).FirstOrDefault();

    private async Task RefreshAgreementStateAsync()
    {
        _agreementStatus = null;
        _myAgreement = null;
        _alignment.Clear();
        _canAgreeWithSelectedReview = true;

        if (_selectedReview is null || _selectedReview.Id == Guid.Empty)
        {
            return;
        }

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = auth.User.FindFirstValue(ClaimTypes.NameIdentifier);
        if (string.IsNullOrWhiteSpace(userId))
        {
            return;
        }

        _canAgreeWithSelectedReview = await AgreementService.CanUserAgreeAsync(userId, _selectedReview.Id);

        _myAgreement = await AgreementService.GetUserAgreementAsync(userId, _selectedReview.Id);
        _alignment = (await AgreementService.GetAlignmentAsync(userId, take: 5)).ToList();
    }

    private async Task SetAgreementAsync(int score)
    {
        if (_selectedReview is null || _selectedReview.Id == Guid.Empty)
        {
            return;
        }

        if (!_canAgreeWithSelectedReview)
        {
            _agreementStatus = "You can't rate agreement with your own review.";
            return;
        }

        _agreementStatus = null;
        _savingAgreement = true;

        try
        {
            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = auth.User.FindFirstValue(ClaimTypes.NameIdentifier);
            if (string.IsNullOrWhiteSpace(userId))
            {
                return;
            }

            await AgreementService.SetUserAgreementAsync(userId, _selectedReview.Id, score);
            _myAgreement = score;
            _alignment = (await AgreementService.GetAlignmentAsync(userId, take: 5)).ToList();
        }
        catch (Exception ex)
        {
            _agreementStatus = ex.Message;
        }
        finally
        {
            _savingAgreement = false;
        }
    }
