@page "/"

@using BoardGameMondays.Core
@inject LatestReviewedGameService LatestReviewedGameService

<PageTitle>Board Game Mondays</PageTitle>


<section class="home-hero" aria-label="Latest reviewed game">
    <div class="home-hero__center">
        <div class="home-hero__kicker">Latest review</div>

        @if (_latest is null)
        {
            <h1 class="home-hero__title">No reviews yet</h1>
            <p class="home-hero__subtitle">Add your first review to feature it here.</p>
        }
        else
        {
            <h1 class="home-hero__title">@_latest.Name</h1>

            @if (!string.IsNullOrWhiteSpace(_latest.Tagline))
            {
                <p class="home-hero__subtitle">@_latest.Tagline</p>
            }

            @if (!string.IsNullOrWhiteSpace(_latest.ImageUrl))
            {
                <div class="home-hero__media">
                    <img src="@_latest.ImageUrl" alt="@($"{_latest.Name} cover")" />
                </div>
            }
        }
    </div>
</section>

@code {
    private BoardGame? _latest;

    protected override async Task OnInitializedAsync()
    {
        _latest = await LatestReviewedGameService.GetLatestAsync();
    }
}

